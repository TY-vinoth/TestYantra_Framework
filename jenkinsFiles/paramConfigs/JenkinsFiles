pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout source code from Git repository
                git branch: 'main', url: 'https://github.com/TY-vinoth/TestYantra_Framework.git'
            }
        }
        stage('Build') {
            steps {
                // Build Maven project
                sh 'mvn clean package'
            }
        }
    }
    post {
            always {
                cleanWs()
            }
            success {
                echo 'Build successful. Slack notification sent to channel '
            }
            unstable {
                echo 'I am unstable :/'
            }
            failure {
                echo 'Build failed. Slack notification sent to channel '
            }
        }
}
